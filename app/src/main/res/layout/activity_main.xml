<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_text_margin"
        android:autofillHints="@string/email"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/form_text_size"
        app:layout_constraintEnd_toStartOf="@+id/formRightGuide"
        app:layout_constraintStart_toStartOf="@+id/formLeftGuide"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dbl_form_text_margin"
        android:autofillHints="@string/name"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textSize="@dimen/form_text_size"
        app:layout_constraintEnd_toStartOf="@+id/formRightGuide"
        app:layout_constraintStart_toStartOf="@+id/formLeftGuide"
        app:layout_constraintTop_toBottomOf="@+id/signUpText" />

    <Button
        android:id="@+id/dobText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_text_margin"
        android:autofillHints="@string/date_of_birth"
        android:focusable="false"
        android:hint="@string/date_of_birth"
        android:onClick="getDatePicker"
        android:textAlignment="textStart"
        android:textSize="@dimen/form_text_size"
        app:layout_constraintEnd_toStartOf="@+id/formRightGuide"
        app:layout_constraintStart_toStartOf="@+id/formLeftGuide"
        app:layout_constraintTop_toBottomOf="@+id/usernameText" />

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_text_margin"
        android:autofillHints="@string/username"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textSize="@dimen/form_text_size"
        app:layout_constraintEnd_toStartOf="@+id/formRightGuide"
        app:layout_constraintStart_toStartOf="@+id/formLeftGuide"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dbl_form_text_margin"
        android:onClick="getFormSuccessActivity"
        android:text="@string/submit"
        app:layout_constraintBottom_toTopOf="@+id/nameDateView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageText" />

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/form_text_margin"
        android:fontFamily="@font/lato_bold"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:textSize="@dimen/form_heading"
        app:layout_constraintBottom_toTopOf="@+id/formTopGuide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/form_text_margin"
        android:autofillHints="@string/age"
        android:background="?attr/editTextBackground"
        android:hint="@string/age"
        android:textSize="@dimen/form_text_size"
        app:layout_constraintEnd_toStartOf="@+id/formRightGuide"
        app:layout_constraintStart_toStartOf="@+id/formLeftGuide"
        app:layout_constraintTop_toBottomOf="@+id/dobText" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formLeftGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/form_text_guide_perc" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formTopGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/form_text_guide_perc" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/formRightGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

</androidx.constraintlayout.widget.ConstraintLayout>