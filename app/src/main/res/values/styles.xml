<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/unbleachedSilk</item>
    </style>

    <style name="ButtonStyles" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/melon</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>

    </style>

    <style name="TabStyles" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/melon</item>
    </style>

</resources>
